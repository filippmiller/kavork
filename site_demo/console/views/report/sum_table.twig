<table border="0" cellpadding="0" cellspacing="0" width="{{ width }}" style="border-collapse:collapse;border-spacing:0;color:#3d454c;font:16px / 24px 'Open Sans','helvetica',sans-serif;margin:0 auto 0 auto;padding: 0 15px;table-layout:auto;text-align:left; background-color:#ffffff;">
  <tr>
    <td align="center" style="background-color:#ffffff;border-collapse:collapse;color:#3d454c;font:600 24px / 24px 'Open Sans','helvetica',sans-serif;height:40px;padding:0 16px 0 16px;text-align:center">{{ title }}</td>
  </tr>
</table>
<table border="0" cellpadding="0" cellspacing="0" width="{{ width }}" style="border-collapse:collapse;border-spacing:0;color:#3d454c;font:16px / 24px 'Open Sans','helvetica',sans-serif;margin:0 auto 0 auto;padding: 0 15px;table-layout:auto;text-align:left; background-color:#ffffff;">  
  <tr valign="top">
    <td align="left" style="border-collapse:collapse;padding: 0 15px 0 15px;">
      {{ t('report','Person') }}
    </td>
    <td align="right" style="border-collapse:collapse;padding: 0 15px 0 15px;">{{ data.cnt }}</td>
  </tr>
  <tr>
    <td bgcolor="#ebeced" colspan="2" height="1" style="font-size:0;line-height:0;border-collapse:collapse">&nbsp;</td>
    </tr>
  <tr valign="top">
    <td align="left" style="border-collapse:collapse;padding: 0 15px 0 15px;">
      {{ t('report','New visitor') }}
    </td>
    <td align="right" style="border-collapse:collapse;padding: 0 15px 0 15px;">{{ data.new_visitor }}</td>
  </tr>
  <tr>
    <td bgcolor="#ebeced" colspan="2" height="1" style="font-size:0;line-height:0;border-collapse:collapse">&nbsp;</td>
    </tr>
  <tr valign="top">
    <td align="left" style="border-collapse:collapse;padding: 0 15px 0 15px;">
      {{ t('report','Regular visitor') }}
    </td>
    <td align="right" style="border-collapse:collapse;padding: 0 15px 0 15px;">{{ data.regular }}</td>
  </tr>
  <tr>
    <td bgcolor="#ebeced" colspan="2" height="1" style="font-size:0;line-height:0;border-collapse:collapse">&nbsp;</td>
    </tr>
  {% if data.anonymus %}
    <tr valign="top">
      <td align="left" style="border-collapse:collapse;padding: 0 15px 0 15px;">
        {{ t('report','Anonymus visitor') }}
      </td>
      <td align="right" style="border-collapse:collapse;padding: 0 15px 0 15px;">{{ data.anonymus }}</td>
    </tr>
	<tr>
    <td bgcolor="#ebeced" colspan="2" height="1" style="font-size:0;line-height:0;border-collapse:collapse">&nbsp;</td>
    </tr>
  {% endif %}
   {% if data.shop_sum %}
    <tr valign="top">
      <td align="left" style="border-collapse:collapse;padding: 0 15px 0 15px;">
        {{ t('report','Pay shop') }}
      </td>
      <td align="right" style="border-collapse:collapse;padding: 0 15px 0 15px;">{{_nf(data.shop_sum) | raw }}</td>
    </tr>
	<tr>
    <td bgcolor="#ebeced" colspan="2" height="1" style="font-size:0;line-height:0;border-collapse:collapse">&nbsp;</td>
    </tr>
	{% endif %}
  {% if data.card_sum %}
    <tr valign="top">
      <td align="left" style="border-collapse:collapse;padding: 0 15px 0 15px;">
        {{ t('report','Pay by card') }}
      </td>
      <td align="right" style="border-collapse:collapse;padding: 0 15px 0 15px;">{{ _nf(data.card_sum) | raw }}</td>
    </tr>
	<tr>
    <td bgcolor="#ebeced" colspan="2" height="1" style="font-size:0;line-height:0;border-collapse:collapse">&nbsp;</td>
    </tr>
  {% endif %}
  {% if data.cash_sum %}
    <tr valign="top">
      <td align="left" style="border-collapse:collapse;padding: 0 15px 0 15px;">
        {{ t('report','Pay cash') }}
      </td>
      <td align="right" style="border-collapse:collapse;padding: 0 15px 0 15px;">{{ _nf(data.cash_sum) | raw }}</td>
    </tr>
	<tr>
    <td bgcolor="#ebeced" colspan="2" height="1" style="font-size:0;line-height:0;border-collapse:collapse">&nbsp;</td>
    </tr>
  {% endif %}
  {% if data.not_pay_cnt %}
    <tr valign="top">
      <td align="left" style="border-collapse:collapse;padding: 0 15px 0 15px;">
        {{ t('report','Not pay') }}
      </td>
      <td align="right" style="border-collapse:collapse;padding: 0 15px 0 15px;">{{ data.not_pay_cnt }}</td>
    </tr>
	<tr>
    <td bgcolor="#ebeced" colspan="2" height="1" style="font-size:0;line-height:0;border-collapse:collapse">&nbsp;</td>
    </tr>
  {% endif %}
  <tr valign="top">
    <td align="left" style="border-collapse:collapse;padding: 0 15px 0 15px;">
      {{ t('report','Sum') }}
    </td>
    <td align="right" style="border-collapse:collapse;padding: 0 15px 0 15px;">{{ _nf(data.total_sum) | raw }}</td>
  </tr>
  <tr>
    <td bgcolor="#ebeced" colspan="2" height="1" style="font-size:0;line-height:0;border-collapse:collapse">&nbsp;</td>
  </tr>
  <tr valign="top">
    <td align="left" style="border-collapse:collapse;padding: 0 15px 0 15px;">
      {{ t('report','Tax') }}
    </td>
    <td align="right" style="border-collapse:collapse;padding: 0 15px 0 15px;">{{ _nf(data.cost-data.sum) | raw }}</td>
  </tr>
  <tr>
    <td bgcolor="#ccc" colspan="2" height="1" style="font-size:0;line-height:0;border-collapse:collapse">&nbsp;</td>
  </tr>
  <tr valign="top">
    <td align="left" style="border-collapse:collapse;font-weight:600;padding: 0 15px 0 15px;">
      {{ t('report','Total') }}
    </td>
    <td align="right" style="border-collapse:collapse;font-weight:600;padding: 0 15px 0 15px;">{{ _nf(data.total_cost) | raw }}</td>
  </tr>
</table>