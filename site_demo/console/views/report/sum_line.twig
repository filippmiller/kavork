<table border="0" cellpadding="0" cellspacing="0" width="{{ width }}" style="border-collapse:collapse;border-spacing:0;color:#3d454c;font:16px / 24px 'Open Sans','helvetica' , sans-serif;margin:0 auto 0 auto;padding: 0 15px;table-layout:auto;text-align:left; background-color:#ffffff;">
  <tr>
    <td align="center" style="color:{{ color }};font-size: 46px;font-family: Open Sans,Helvetica,sans-serif;font-weight: 600; line-height: 46px;border-collapse: collapse;padding: 25px 15px 0 15px;">{{ _nf(data.total_cost)|raw }} {{ cafe('currency')|raw }}</td>
  </tr>
  <tr valign="top">
    <td align="center" colspan="2" style="font-family:Open Sans,Helvetica,sans-serif;font-size:21px;line-height:26px;color:#797e82;padding-bottom:10px;border-collapse:collapse" valign="top">
      {{ local_date(period[0]) }}
      {% if local_date(period[0])!=local_date(period[1]) %}
        - {{ local_date(period[1]) }}
      {%  endif %}
    </td>
  </tr>
</table>